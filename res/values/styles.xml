<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="gray_bg">
    	<item name="android:textColor">@color/white</item>
    	<item name="android:background">@drawable/register_text_btn_bg</item>
    </style>
    <style name="black_bg">
    	<item name="android:textColor">@color/white</item>
    	<item name="android:background">#000000</item>
    	
    </style>
    <style name="gray_textview" parent="gray_bg"> 
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>     
    </style>
    <style name="gray_btn" parent="gray_bg">
    	<item name="android:layout_margin">5dp</item>
    </style>
    
    <style name="black_btn" parent="black_bg">
    	<item name="android:layout_margin">5dp</item>
    	
    </style>
    
    <style name="black_textview" parent="black_bg"> 
        <item name="android:ems">10</item>
        
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center_horizontal</item>     
    </style>
    
    <style name="black_editview" parent="black_textview"> 
        <item name="android:singleLine">true</item> 
        <item name="android:maxLines">1</item> 
    </style>
    
    <style name="black_list" parent="black_bg">
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">5dp</item>     
    </style>
    
    <style name="blackPicker" >
    	<item name="android:textColor">#ffffff</item>
	</style>

    
</resources>
