<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:id="@+id/comment_user_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
             />

        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/comment_user_photo"
            android:text="Paul Hsia"
            android:textColor="#ff7d9ad9"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/comment_like_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/comment_like_count"
            android:background="#00000000"
            android:src="@drawable/jazz_comment_btn1" />

        <TextView
            android:id="@+id/comment_like_count"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="100"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/comment_user_name"
            android:text="comment context"
            android:textSize="25dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/comment_content"
            android:layout_below="@+id/comment_content"
            android:text="comment_time"
            android:textColor="#bbbbbb" />
        
    </RelativeLayout>

</RelativeLayout>
