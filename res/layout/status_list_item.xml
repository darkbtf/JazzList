<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/defualt_corner"

     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
		android:layout_marginTop="10dp"
         >
		<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/state_user_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/image_shape"
                />

            <TextView
                android:id="@+id/status_user_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/state_user_photo"
                android:text="User Name"
                android:textColor="#ff7d9ad9"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/status_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:text="Default"
                android:textColor="@color/white"
                android:textSize="20dp" />

       </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp" >

            <TextView
                android:id="@+id/status_todo_name"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="Todo Name"
                android:textColor="@android:color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/status_todo_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/status_todo_name"
                android:layout_below="@+id/status_todo_name"
                android:text="TextView"
                android:textColor="#bbbbbb"
                android:textSize="18dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
             >

            <ImageButton
                android:id="@+id/status_like_graph"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/jazz_comment_btn1" />
			
            <TextView
                android:id="@+id/status_like_count"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="10"
                android:layout_marginTop="10dp"
				android:textColor="@android:color/white"
                />

            <ImageButton
                android:id="@+id/status_comment_graph"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:maxHeight="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#00000000"
                
                android:src="@drawable/comment_icon" />

            <TextView
                android:id="@+id/status_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="10"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/white"
                 />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
