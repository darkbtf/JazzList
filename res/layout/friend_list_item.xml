<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/list_selector">
 
    <ImageView
        android:id="@+id/friend_user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/desc_list_item_icon"
        
        android:layout_centerVertical="true" />
 
    <TextView
        android:id="@+id/friend_user_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/friend_user_icon"
        android:gravity="center_vertical"
        android:paddingRight="40dp"
        android:textSize="20sp"
        android:textColor="@color/list_item_title" />

    <ImageButton
        android:id="@+id/friend_status_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="110dp"
        android:src="@drawable/friend_status_button" />

    <ImageButton
        android:id="@+id/friend_fight_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/friend_status_button"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/friend_status_button"
        android:layout_marginRight="42dp"
        android:src="@drawable/ic_action_name" />
 
</RelativeLayout>