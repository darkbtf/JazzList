<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taipeihot.jazzlist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.taipeihot.jazzlist.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.LeftAndRightActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.taipeihot.jazzlist.jazzmon.ProfileMainActivity"
            android:label="@string/title_activity_achievement" >
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.FriendListFragment"
            android:label="@string/title_activity_freind_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.TimelineActivity"
            android:label="@string/title_activity_timeline"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.SettingActivity"
            android:label="@string/title_activity_setting"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.jazzmon.EquipmentActivity"
            android:label="@string/title_activity_equipment" >
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.jazzmon.FightActivity"
            android:label="@string/title_activity_fight" >
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.jazzmon.TreeActivity"
            android:label="@string/title_activity_tree" >
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.jazzmon.ShopActivity"
            android:label="@string/title_activity_shop" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.taipeihot.jazzlist.EnterActivity"
            android:label="@string/title_activity_enter" >
        </activity>
    </application>

</manifest>
